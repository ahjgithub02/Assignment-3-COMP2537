<header class="game-header container mt-3">
    <h1 class="pokemon-font text-center mb-4">Pok√©mon Memory Match</h1>

    <section class="settings-panel row justify-content-center align-items-center g-3 mb-4">
        <!-- Theme -->
        <div class="setting-group col-md-3 col-sm-6">
            <label for="theme-select" class="form-label">Theme:</label>
            <select id="theme-select" class="form-select">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
            </select>
        </div>

        <!-- Difficulty -->
        <div class="setting-group col-md-3 col-sm-6">
            <label for="difficulty" class="form-label">Difficulty:</label>
            <select id="difficulty" class="form-select" required>
                <option value="" selected disabled>Select Difficulty</option>
                <option value="easy">Easy (4 pairs)</option>
                <option value="medium" selected>Medium (6 pairs)</option>
                <option value="hard">Hard (8 pairs)</option>
            </select>
        </div>

        <div class="setting-group col-md-3 col-sm-6 d-flex flex-wrap gap-2">
            <!-- Start Button -->
            <button id="start-btn" class="btn btn-success flex-grow-1">Start</button>
            
            <!-- Reset Button -->
            <button id="reset-btn" class="btn btn-secondary flex-grow-1">Reset</button>
            
            <!-- Power-Up Button -->
            <button id="power-up-btn" class="btn btn-warning flex-grow-1" disabled>
                <i class="bi bi-lightning-charge"></i> Power-Up (<span id="power-up-count">3</span>)
            </button>
        </div>
        
        <div class="setting-group col-md-3 col-sm-6">
            <button id="pause-btn" class="btn btn-secondary me-2">
                <i class="bi bi-pause-fill"></i> Pause
            </button>
            <button id="back-btn" class="btn btn-danger">
                <i class="bi bi-door-open"></i> Quit
            </button>
        </div>
    </section>
</header>