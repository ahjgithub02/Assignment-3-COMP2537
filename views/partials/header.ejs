<header class="game-header">
    <h1>Pokémon Memory Match</h1>

    <section class="settings-panel">
        <!-- Theme -->
        <div class="setting-group">
            <label for="theme-select">Theme:</label>
            <select id="theme-select">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
            </select>
        </div>

        <!-- Difficulty -->
        <div class="setting-group">
            <label for="difficulty">Difficulty:</label>
            <select id="difficulty">
                <option value="easy">Easy (4 pairs)</option>
                <option value="medium" selected>Medium (6 pairs)</option>
                <option value="hard">Hard (8 pairs)</option>
            </select>
        </div>

        <div class="setting-group">
            <button id="start-btn" class="btn-primary">Start</button>
            <button id="reset-btn" class="btn-secondary">Reset</button>
            <!-- Power-Up Button (hidden by default) -->
            <button id="power-up-btn" class="btn-powerup" style="display: none;">
                🔥 Power-Up (<span id="power-up-count">3</span>)
            </button>
        </div>

        <div class="setting-group">
            <button id="pause-btn" class="btn-secondary">⏸ Pause</button>
            <button id="back-btn" class="btn-warning">🚪 Quit</button>
        </div>
    </section>
</header>