<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pok√©mon Memory Match</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body class="<%= theme || 'light-theme' %>">
  <%- include('partials/header') %>

    <main class="game-container">
      <!-- Status Bar -->
      <section id="status-bar" class="status-bar">
        <div id="click-count">Clicks: 0</div>
        <div id="match-count">Matches: 0</div>
        <div id="timer">Time: 60s</div>
        <div id="game-over-popup" style="display:none;">
          <p>Game Over!</p>
          <button id="reset-btn">Reset</button>
        </div>
      </section>

      <!-- Game Board -->
      <div id="game-grid">
        <div class="instruction">
          <p>1. Select difficulty</p>
          <p>2. Click START to begin</p>
        </div>
      </div>

      <div id="game-popup" style="display:none"></div>
        
    </main>

    <%- include('partials/footer') %>
      <script src="/js/index.js"></script>
</body>

</html>